add_action( 'admin_menu', 'custom_theme_options_menu' );


function custom_theme_options_menu() {
    
    add_menu_page('Agent Information', 'Theme Options', 'manage_options', 'mi-top-level-handle', 'mi_theme_options' );

    add_submenu_page('mi-top-level-handle', 'Agent Information', 'Agent Information', 'manage_options', 'mi-sub-agent-information', 'mi_theme_options');

    add_submenu_page('mi-top-level-handle', 'Property Details', 'Property Details' , 'manage_options', 'mi-sub-property-details', 'mi_sub_property_details');
    add_submenu_page('mi-top-level-handle', 'Printable Info', 'Printable Info' , 'manage_options', 'mi-sub-printable-info', 'mi_sub_printable_info');
    add_submenu_page('mi-top-level-handle', 'Contact Info', 'Contact Info' , 'manage_options', 'mi-sub-contact-details', 'mi_sub_contact_details');
    
	//add_menu_page( 'Agent Information', 'Theme Options', 'manage_options', 'custom-theme-options', 'custom_theme_options' );
        //add_submenu_page( 'custom-theme-options', 'Agent Information', 'Agent Information', 'manage_options', 'custom-theme-option-agent-info', 'custom_theme_options');
        //add_submenu_page( 'custom-theme-options', 'Property Details', 'Property Details', 'manage_options', 'custom-theme-option-property-details', 'custom_property_details');
        //add_submenu_page( 'custom-theme-options', 'Meta Information', 'Meta Information', 'manage_options', 'custom-theme-option-meta-information', 'custom_meta_information');
        //add_submenu_page( 'custom-theme-options', 'Contact Information', 'Contact Information', 'manage_options', 'custom-theme-option-contact-information', 'custom_contact_information');
}
